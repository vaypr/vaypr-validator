{
  "compilerOptions": {
    "alwaysStrict": true,
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "declaration": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "pretty": true,
    "lib": ["es2017", "dom"],
    "moduleResolution": "node",
    "outDir": "./dist",
    "target": "esnext",
    "typeRoots": [
      "./node_modules/@types"
    ]
  }
}
